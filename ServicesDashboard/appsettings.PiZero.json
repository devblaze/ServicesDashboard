{
  "DatabaseProvider": "SQLite",
  "ConnectionStrings": {
    "SQLiteConnection": "Data Source=/var/lib/servicesdashboard/servicesdashboard.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AppSettings": {
    "Ollama": {
      "BaseUrl": "http://localhost:11434",
      "Enabled": false,
      "Model": "llama3.2:1b"
    },
    "NetworkScan": {
      "TimeoutSeconds": 30,
      "MaxConcurrentScans": 5,
      "RetryAttempts": 2,
      "AutoScanIntervalMinutes": 60
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5050"
      }
    }
  }
}
